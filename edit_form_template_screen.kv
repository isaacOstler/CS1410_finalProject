<FormField@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, .1
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'horizontal'
    size_hint: 1, None

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None

        Label:
            text: 'Field Name'
            font_size: 40
            size_hint: .5, None
            height: 20
            pos_hint: {'center_y': 0.5,'center_x': 0.5}
        
        TextInput:
            id: field_name_textInput
            multiline: False
            size_hint: .5, 1
            font_size: 40
            on_text: root.update_field_name()

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None

        Label:
            text: 'Field Type'
            font_size: 40
            size_hint: .5, None
            height: 20
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        Spinner:
            id: field_type_spinner
            values: ['Good / Bad', 'Number', 'Percentage', 'Text']
            size_hint: .5, 1
            font_size: 40
            on_text: root.update_field_type()
        
    Button:
        text: 'Remove'
        font_size: 40
        size_hint: .5, 1
        background_color: 1, 0, 0, 1
        pos_hint: {'center_y': 0.5,'center_x': 0.5}
        on_release: root.remove_field()

<EditFormTemplateScreen>:
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        NavBar:
            id: navbar
            size_hint: 1, .1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .05

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            padding: 10, 10
            spacing: 10

            Label:
                text: 'Form Editor'
                font_size: 50
                size_hint_y: None
                height: 50

            BoxLayout:
                orientation: 'horizontal'
                size_hint: .5, 1

            Button:
                text: 'Save Changes'
                font_size: 40
                size_hint: .5, None
                background_color: 0, 1, 0, 1
                pos_hint: {'center_y': 0.5,'center_x': 0.75}
                on_release: root.save_changes()
                height: 60

        ScrollView:
            size_hint: 1, .8
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

            StackLayout:
                orientation: 'lr-tb'  # Left to right, top to bottom
                size_hint: 1, .8
                padding: 10, 10
                spacing: 10

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, None
                    padding: 10, 10
                    spacing: 10

                    Label:
                        text: 'Form Name'
                        font_size: 40
                        size_hint: .5, None
                        height: 20
                        pos_hint: {'center_y': 0.5,'center_x': 0.5}

                    TextInput:
                        id: form_name_textInput
                        multiline: False
                        size_hint: .5, 1
                        font_size: 40

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, None

                    Label:
                        text: 'Form Frequency'
                        font_size: 40
                        size_hint: .5, None
                        height: 20
                        pos_hint: {'center_y': 0.5,'center_x': 0.5}

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: .5, 1

                        Button:
                            text: 'Daily'
                            id: daily_button
                            font_size: 40
                            size_hint: .5, None
                            on_release: root.setFrequency('DAILY')
                        
                        Button:
                            text: 'Weekly'
                            id: weekly_button
                            font_size: 40
                            size_hint: .5, None
                            on_release: root.setFrequency('WEEKLY')
                        
                        Button:
                            text: 'Monthly'
                            id: monthly_button
                            font_size: 40
                            size_hint: .5, None
                            on_release: root.setFrequency('MONTHLY')
                        
                        Button:
                            text: 'Yearly'
                            id: yearly_button
                            font_size: 40
                            size_hint: .5, None
                            on_release: root.setFrequency('YEARLY')

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, None

                    Label:
                        text: 'Apparatus'
                        font_size: 40
                        size_hint: .5, None
                        height: 20
                        pos_hint: {'center_y': 0.5,'center_x': 0.5}

                    TextInput:
                        id: apparatus_textInput
                        multiline: False
                        font_size: 40
                        size_hint: .5, 1

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, .05

                Label:
                    text: 'Form Fields'
                    font_size: 40
                    size_hint: 1, None
                    height: 20
   
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                                  
                    Button:
                        text: 'Add Field'
                        font_size: 40
                        size_hint: 0.5, None
                        pos_hint: {'center_y': 0.5,'center_x': 0.5}
                        height: 60
                        on_release: root.add_field()

                    StackLayout:
                        orientation: 'lr-tb'  # Left to right, top to bottom
                        size_hint: 1, 1
                        padding: 10, 10
                        spacing: 10
                        id: form_fields