<GUI_FormListItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, .1  # grey color
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'horizontal'
    size_hint: 1, None
    pos_hint: {'top_y': 0,'center_x': 0.5}
    
    Label:
        text: root.form_name
        size_hint: .35,1
        pos_hint: {'center_y': 0.5}
        font_size: 35
        halign: 'center'
        valign: 'center'

    Label:
        text: root.form_apparatus
        size_hint: .1,1
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'

    Label:
        text: root.form_status
        color: root.form_status_color
        size_hint: .2,1
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'

    Button:
        text: 'View'
        size_hint: .1,.6
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'
        on_press: root.view_form()

    BoxLayout:
        size_hint: .01,1
        
<HomeScreen>:
    name: 'home'
    id: home_screen
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,1

        NavBar:
            id: navbar
            size_hint: 1, .1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.05, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Form Name'
                size_hint: 0.45, None
            Label:
                text: 'Apparatus'
                size_hint: 0.2, None
            Label:
                text: 'Form Status'
                size_hint: 0.2, None
            Label:
                text: 'Options'
                size_hint: 0.2, None

        StackLayout:
            orientation: 'lr-tb'  # Left to right, top to bottom
            size_hint: 1, .8
            padding: 10, 10
            spacing: 10
            id: forms_list