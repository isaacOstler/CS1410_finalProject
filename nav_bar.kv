<NavBar@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, .2  # grey color
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'horizontal'
    size_hint: 1,.9
    pos_hint: {'top_y': 0,'center_x': 0.5}
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .01,.8
        pos_hint: {'center_y': 0.5,'center_x': .9}
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .8,.8
        pos_hint: {'center_y': 0.5,'center_x': .1}
        
        Button:
            text: 'Home'
            id: home
            font_size: 32
            size_hint: .25,1
        
        Button:
            text: 'Records'
            id: records
            font_size: 32
            size_hint: .25,1
        
        Button:
            text: 'Form Creator'
            id: form_creator
            font_size: 32
            size_hint: .25,1
        
        Button:
            text: 'Users'
            id: users
            font_size: 32
            size_hint: .25,1

    BoxLayout:
        orientation: 'horizontal'
        size_hint: .01,.8
        pos_hint: {'center_y': 0.5,'center_x': .9}

    BoxLayout:
        orientation: 'vertical'
        size_hint: .2,.8
        pos_hint: {'center_y': 0.5,'center_x': .9}
        
        Label:
            text: "Signed In As: " + root.username
            font_size: 30
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.5

            Button:
                text: 'Log Out'
                on_press: root.logout()
                font_size: 20
                size_hint: .5,1
            
            Button:
                text: 'Profile'
                font_size: 20
                size_hint: .5,1

    BoxLayout:
        orientation: 'horizontal'
        size_hint: .01,.8
        pos_hint: {'center_y': 0.5,'center_x': .9}