<ProfileScreen>:
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        NavBar:
            id: navbar
            size_hint: 1, .1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        Label:
            text: 'Profile'
            font_size: 50
            size_hint_y: None
            height: 50

        StackLayout:
            orientation: 'lr-tb'  # Left to right, top to bottom
            size_hint: 1, .8
            padding: 10, 10
            spacing: 10

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                Label:
                    text: 'Name'
                    size_hint_x: None
                    width: 200

                TextInput:
                    id: name
                    size_hint_x: None
                    width: 400
                    multiline: False
                    text: root.nameOfUser

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                Label:
                    text: 'Username'
                    size_hint_x: None
                    width: 200

                TextInput:
                    id: username
                    size_hint_x: None
                    width: 400
                    multiline: False
                    text: root.username


            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                Label:
                    text: 'Rank'
                    size_hint_x: None
                    width: 200

                TextInput:
                    id: rank
                    size_hint_x: None
                    width: 400
                    multiline: False
                    text: root.rank

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                Label:
                    text: 'Admin'
                    size_hint_x: None
                    width: 200

                CheckBox:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: admin
                    size_hint_x: None
                    width: 50
                    active: root.is_admin

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                Button:
                    text: 'Save'
                    on_press: root.save_profile()
                    size_hint_x: None
                    width: 200
                
                Button:
                    text: 'Revert'
                    background_color: 1, 0, 0, 1
                    on_press: root.cancel_profile()
                    size_hint_x: None
                    width: 200
                
            Label:
                text: root.message
                color: 1, 0, 0, 1
                size_hint_y: None
                height: 50
                color: 1, 0, 0, 1
                font_size: 30