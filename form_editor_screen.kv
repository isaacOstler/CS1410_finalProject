<GUI_FormTemplateListItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, .1  # grey color
        Rectangle:
            size: self.size
            pos: self.pos

    orientation: 'horizontal'
    size_hint: 1, None
    pos_hint: {'top_y': 0,'center_x': 0.5}
    
    Label:
        text: root.form_name
        size_hint: .5,1
        pos_hint: {'center_y': 0.5}
        font_size: 35
        halign: 'center'
        valign: 'center'

    Label:
        text: root.form_frequency
        size_hint: .2,1
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'

    Label:
        text: root.form_apparatus
        size_hint: .2,1
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'

    Button:
        text: 'Edit'
        size_hint: .1,.6
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'
        on_press: root.edit_form()

    BoxLayout:
        size_hint: .01,1

    Button:
        text: 'Delete'
        id: delete_button
        size_hint: .1,.6
        background_color: .7, 0, 0, 1
        pos_hint: {'center_y': 0.5}
        font_size: 30
        halign: 'center'
        valign: 'center'
        on_press: root.delete_form()

    BoxLayout:
        size_hint: .01,1
        
<FormEditorScreen>:
    name: 'form_editor'
    id: form_editor_screen
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,1

        NavBar:
            id: navbar
            size_hint: 1, .1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .0075

        Button:
            text: 'Add Form'
            size_hint: 0.25, .05
            pos_hint: {'center_x': 0.5}
            on_press: root.add_form()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .0075


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.05, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'Form Name'
                size_hint: 0.45, None
            Label:
                text: 'Frequency'
                size_hint: 0.2, None
            Label:
                text: 'Apparatus'
                size_hint: 0.2, None
            Label:
                text: 'Options'
                size_hint: 0.2, None

        ScrollView:
            size_hint: 1, .8
            id: forms_scroll
            do_scroll_x: False
            do_scroll_y: True

            StackLayout:
                orientation: 'lr-tb'  # Left to right, top to bottom
                padding: 10, 10
                spacing: 10
                id: forms_list
                size_hint_y: None
                size_hint_x: 1
                height: self.minimum_height