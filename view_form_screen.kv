<GoodBad_FormField@BoxLayout>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint_y: None
    height: 50

    Label:
        text: root.label
        pos_hint: {'center_y': 0.5}
        size_hint_x: 0.5
        width: 200
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 0.5, None
        height: 60
        
        Label:
            text: root.prompt
            id: good_bad_label
            size_hint: 0.2, None
            height: 60
            font_size: 40
            pos_hint: {'center_y': 0.5}

        Button:
            id: good_button
            text: 'Good'
            size_hint: 0.5, None
            height: 60
            background_color: 1, 1, 1, 0.5
            on_press: root.update_value('Good')

        Label:
            text: root.prompt2
            id: good_bad_label
            size_hint: 0.2, None
            height: 60
            font_size: 40
            pos_hint: {'center_y': 0.5}

        Button:
            id: bad_button
            text: 'Bad'
            size_hint: 0.5, None
            height: 60
            background_color: 1, 1, 1, 0.5
            on_press: root.update_value('Bad')

<Text_FormField@BoxLayout>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint_y: None
    height: 50

    Label:
        text: root.label
        pos_hint: {'center_y': 0.5}
        size_hint_x: 0.5
        width: 200

    TextInput:
        size_hint: 0.5, None
        height: 60
        font_size: 40
        multiline: False
        text: root.value
        disabled: root.disabled
        write_tab: False
        hint_text: "Enter Value"
        on_text: root.update_value(self.text)

<ViewFormScreen>:
    name: 'view_form_screen'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        NavBar:
            id: navbar
            size_hint: 1, .1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .01

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None

            Label:
                text: root.title
                font_size: 50
                size_hint: 0.7, None
                pos_hint: {'center_y': 0.5}
                height: 50

            Label:
                text: root.subtitle
                font_size: 40
                pos_hint: {'center_y': 0.5}
                color: 0.5, 0.5, 0.5, 1
                size_hint_y: None

            Button:
                text: 'Return'
                size_hint: 0.4, None
                pos_hint: {'center_y': 0.5}
                height: 50
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.save_and_close()

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.1, 1
        
        Label:
            text: root.message
            font_size: 40
            size_hint: 1, None
            color: 1, 0, 0, 1
            pos_hint: {'center_y': 0.5}
            height: 50

        ScrollView:
            id: scroll
            size_hint: 1, 1
            pos_hint: {'center_y': 0.5,'center_x': 0.5}

            BoxLayout:
                size_hint_y: None
                size_hint_x: 1
                height: self.minimum_height
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50

                    Label:
                        text: 'Apparatus'
                        size_hint_x: 0.5
                        width: 200

                    Label:
                        size_hint_x: 0.5
                        width: 400
                        text: root.apparatus

                StackLayout:
                    orientation: 'lr-tb'  # Left to right, top to bottom
                    size_hint: 1, 1
                    padding: 10, 10
                    spacing: 10
                    id: form_fields
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 50

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 0.5, None
                        height: 50
                
                    Button:
                        id: complete_button
                        text: 'Mark Complete'
                        size_hint: 0.4, None
                        pos_hint: {'center_y': 0.5}
                        height: 50
                        background_color: 0, 1, 0, 1
                        on_press: root.complete()

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint: 0.5, None
                        height: 50